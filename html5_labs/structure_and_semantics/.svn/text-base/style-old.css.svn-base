/* http://meyerweb.com/eric/tools/css/reset/ */
/* v1.0 | 20080212 */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td {
	margin: 0;
	padding: 0;
	border: 0;
	outline: 0;
	font-size: 100%;
	vertical-align: baseline;
	background: transparent;
}

ol, ul {
	list-style: none;
}

blockquote, q {
	quotes: none;
}

blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}

/* remember to define focus styles! */
:focus {
	outline: 0;
}

/* remember to highlight inserts somehow! */
ins {
	text-decoration: none;
}

del {
	text-decoration: line-through;
}

/* tables still need 'cellspacing="0"' in the markup */
table {
	border-collapse: collapse;
	border-spacing: 0;
}
/* END OF THE CSS RESET */

body{
	background-color:#93BFED;
	margin:0px auto;
	max-width:800px;
	border-right:1px solid white;
	border-left:1px solid white;
	font-family:sans-serif;
}

h1, h2, h3, h4, h5, h6{
	margin:0px;
	padding:0px;
}

h1{
	padding:5px 0px;
	font:2em sans-serif;
	font-weight:bold;
}

h2{
	font:1.5em sans-serif;
	font-weight:bold;
}

.tagline{
	margin:0px;
	font:1.3em sans-serif;
}

.pubdate{
	margin: 5px 0px 0px 0px;
	float:right;
}

#header, .header{
	background-color:#B5F797;
	display:block;
	text-align:center;
	width:100%;
}

.header{
	text-align:left;
	border-bottom:1px solid white;
}

#nav{
	background-color:#B6E6A1;
	display:block;
	height:40px;
	margin:0px 0px 10px 0px;
	text-align:center;
}

#nav ul{
	margin:0px;
	padding:10px 0px;
}

#nav ul li{
	display:inline;
	margin:0px 5px;
}

#aside{
	display:block;
	width:190px;
	float:left;
	padding:0px 5px;
	text-align:justify;
}

#section{
	display:block;
	margin:0px 5px 0px 5px;
	float:right;
	width:590px;
}

.article{
	border:1px solid #FFF;
	margin-bottom:15px;
}

#footer{
	background-color:#B5F797;
	display:block;
	text-align:center;
	width:100%;
	margin:0px 0px 10px;
	clear:both;
}
